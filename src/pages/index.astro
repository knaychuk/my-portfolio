---
import '@fontsource/poppins';
import gamerec_image from "../assets/screenshots/gamerec.png";
import expire_image from "../assets/screenshots/expire.png";
import portfolio_image from "../assets/screenshots/portfolio.png";
import alldeep_image from "../assets/screenshots/alldeep.png";
import musicpractice_image from "../assets/screenshots/musicpractice.png";
import astro_logo from "../assets/astro.png";
import test_image from "../assets/spiritfarer_background.png";
import cv from "../assets/Kate Naychuk CV.pdf";
import favicon from '/favicon.ico';


---


<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={favicon} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">
		<link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
          
		<title>Kate's Portfolio</title>

		
	</head>
	<body class="font-poppins relative">

		<!-- intro page -->
		<section id="top-section" class="text-slate-300 bg-gradient-to-tl from-neutral-800 to-neutral-700 h-screen flex justify-center items-center text-center ">
			
			<div>
				<h1 class="text-4xl m-2 lg:text-6xl">Hi, I'm <span class="text-cyan-700">Kate.</span></h1>
				<h2 class="text-2xl m-2 lg:text-3xl">I like creating things</h2>
				<button onclick="document.getElementById('about-section').scrollIntoView({ behavior: 'smooth'})" class="text-lg m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-cyan-800 text-cyan-700 hover:bg-cyan-800 hover:text-slate-300 duration-300 lg:text-2xl">View More</button>
			</div>
		</section>

		<!-- navbar -->
		<!-- <nav class="bg-[#114051] shadow-navbar sticky top-0">
			<ol class="text-lg p-5 flex justify-center md:text-xl lg:text-2xl">
				<li class="transition ease-in-out delay-50 text-white mx-5 hover:translate-y-1 hover:scale-110 hover: duration-300 hover:cursor-pointer"><a href="#top-section">Top</a></li>
				<li class="transition ease-in-out delay-50 text-white mx-5 hover:translate-y-1 hover:scale-110 hover: duration-300 hover:cursor-pointer"><a href="#about-section">About</a></li>
				<li class="transition ease-in-out delay-50 text-white mx-5 hover:translate-y-1 hover:scale-110 hover: duration-300 hover:cursor-pointer"><a href="#tools-section">Tools</a></li>
				<li class="transition ease-in-out delay-50 text-white mx-5 hover:translate-y-1 hover:scale-110 hover: duration-300 hover:cursor-pointer"><a href="#projects-section">Projects</a></li>
			</ol>
		</nav> -->

		<!-- info  -->
		<section id="about-section" class="text-slate-200 bg-cyan-900 flex flex-col items-center ">
						<!-- about section -->
			<div>
				<h2 class="text-3xl text-center mt-10 mb-5 lg:text-4xl">About</h2>
				<p class="text-base mb-5 mx-10 max-w-[800px] min-w-[300px] lg:text-xl">I recently graduated from the University of British Columbia with a degree in computer science. During my time there, I was given the opportunity to learn and experiment with really cool technologies that allowed me to create unique projects and taught me the fundementals in both practical and theoritical applications. 
				<br>
				<br>
				I love music and video games so I try to find new ways to combine my hobbies which helps keep my development journey fresh and exciting. Many of the concepts displayed through my projects are self-driven in order to explore my areas of interest.
				</p>
			</div>

			<!-- tools section -->
			<div>
				<h2 class="text-3xl mb-5 lg:text-4xl">Tools</h2>
			</div>
			<div class="mb-10">
				<i class="devicon-html5-plain colored text-4xl mx-2"></i>
				<i class="devicon-css3-plain colored text-4xl mx-2"></i>
				<i class="devicon-java-plain colored text-4xl mx-2"></i>
        <i class="devicon-javascript-plain colored text-4xl mx-2"></i>
				<i class="devicon-nextjs-plain text-4xl mx-2"></i>
        <i class="devicon-tailwindcss-plain colored text-4xl mx-2"></i> 
				<i class="devicon-mongodb-plain-wordmark colored text-4xl mx-2"></i>  
				<i class="devicon-supabase-plain text-4xl mx-2 colored"></i>  
			</div>
		</section>

		<!-- experience section -->

		<section class=" bg-neutral-800  flex flex-col items-center text-center">
			<h2 class="text-white text-3xl mt-10 mb-10 lg:text-4xl">Experience</h2>
			
			<!-- //alldeep project -->
			<div class=" text-slate-300 shadow-project-cards flex flex-col items-center mb-10 px-10 py-5 lg:flex-row mx-10">
				<div>
					<h3 class=" text-2xl mb-5 text-slate-200 ">All Deep Neuromuscular Clinic</h3>
					<img class="mb-5" src={alldeep_image} alt="first project (gamerec) screenshot" width="600px" height="">
				</div>
				<div class="lg:ml-10">
					<p class="max-w-[500px] min-w-[300px] mb-5 lg:min-w-[400px] text-left text-lg">
						Currently working with a local massage clinic to update their website when necessary as well as increasing their online presence.
					</p>
					<div class="flex justify-center mb-5 lg:mt-10">
						<i class="devicon-html5-plain colored text-4xl mx-2"></i>
						<i class="devicon-css3-plain colored text-4xl mx-2"></i>
            <i class="devicon-php-plain colored text-5xl mx-2"></i>
					</div>
					<div class="lg:mt-10">
						<a href="https://alldeep.ca" target="_blank"><button class="text-xl m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-cyan-800 text-cyan-600 hover:bg-cyan-800 hover:text-slate-300">Company Website</button></a>
					
					</div>
				</div>
			</div>
		</section>

		<!-- project section -->
		<section class=" bg-neutral-800  flex flex-col items-center text-center">
			<h2 class="text-white text-3xl mt-10 mb-10 lg:text-4xl">Projects</h2>

			<!-- music practice -->
			<div class=" text-slate-300 shadow-project-cards flex flex-col items-center mb-10 px-10 py-5 lg:flex-row mx-10">
				<div class="lg:order-last">
					<h3 class=" text-2xl mb-5 text-slate-200 ">Music Practice</h3>
					<img class="mb-5" src={musicpractice_image} alt="" width="600px">
				</div>
				<div class="lg:mr-10">
					<p class="max-w-[500px] min-w-[300px] mb-5 lg:min-w-[400px] text-left text-lg ">A web app for musicians that allows users to track their practice hours, store sheet music and access other tools thay may be usesful during rehersal time.</p>
					<p class=""><span class="font-bold">Demo Email:</span> Demo@email.com</p>
					<p><span class="font-bold">Password:</span> DemoPassword</p>
					<div class="flex justify-center mb-5 lg:mt-10">
						<i class="devicon-nextjs-plain text-5xl mx-2"></i>	
            <i class="devicon-supabase-plain text-5xl mx-2 colored"></i>    
						<i class="devicon-tailwindcss-plain colored text-5xl mx-2"></i>   
					</div>
					<div class="lg:mt-10">
						<a href="https://my-music-practice.vercel.app/" target="_blank"><button class="text-xl m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-cyan-800 text-cyan-600 hover:bg-cyan-800 hover:text-slate-300 duration-300">Live Demo</button></a>
						<a href="https://github.com/knaychuk/music-practice" target="_blank"><button class="text-xl m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-cyan-800 text-cyan-600 hover:bg-cyan-800 hover:text-slate-300 duration-300">GitHub</button></a>
					</div>
				</div>
			</div>
			
			<!-- //gamerec -->
			<div class=" text-slate-300 shadow-project-cards flex flex-col items-center mb-10 px-10 py-5 lg:flex-row mx-10">
				<div>
					<h3 class=" text-2xl mb-5 text-slate-200 ">GameRec</h3>
					<img class="mb-5" src={gamerec_image} alt="first project (gamerec) screenshot" width="600px" height="">
				</div>
				<div class="lg:ml-10">
					<p class="max-w-[500px] min-w-[300px] mb-5 lg:min-w-[400px] text-left text-lg">
						A forum website that allows users to post about their favourite video games or search by genre to find new titles to play. Sign in with your Google account to get started.
					</p>
					<div class="flex justify-center mb-5 lg:mt-10">
            <i class="devicon-nextjs-plain text-5xl mx-2"></i>
            <i class="devicon-tailwindcss-plain colored text-5xl mx-2"></i>  
            <i class="devicon-mongodb-plain-wordmark colored text-5xl mx-2"></i>  
					</div>
					<div class="lg:mt-10">
						<a href="https://gamerec.vercel.app/" target="_blank"><button disabled class="text-xl m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-red-500 text-red-500">Making Changes</button></a>
						<a href="https://github.com/knaychuk/gamerec" target="_blank"><button class="text-xl m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-cyan-800 text-cyan-600 hover:bg-cyan-800 hover:text-slate-300 duration-300">GitHub</button></a>
					</div>
				</div>
			</div>

			<!-- //expire -->
			<div class=" text-slate-300 shadow-project-cards flex flex-col items-center mb-10 px-10 py-5 lg:flex-row mx-10">
				<div class="lg:order-last">
					<h3 class=" text-2xl mb-5 text-slate-200 ">Expire</h3>
					<img class="mb-5" src={expire_image} alt="" width="600px">
				</div>
				<div class="lg:mr-10">
					<p class="max-w-[500px] min-w-[300px] mb-5 lg:min-w-[400px] text-left text-lg ">A food tracker that allows you to add groceries to keep track of their expiry dates. Create an account to get started.</p>
					<div class="flex justify-center mb-5 lg:mt-10">
						<i class="devicon-react-original colored text-5xl mx-2"></i>	
            <i class="devicon-firebase-plain colored text-5xl mx-2"></i>          
					</div>
					<div class="lg:mt-10">
						<a href="https://expire-172fd.web.app/about" target="_blank"><button class="text-xl m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-cyan-800 text-cyan-600 hover:bg-cyan-800 hover:text-slate-300 duration-300">Live Demo</button></a>
						<a href="https://github.com/knaychuk/expire-food-tracker-react" target="_blank"><button class="text-xl m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-cyan-800 text-cyan-600 hover:bg-cyan-800 hover:text-slate-300 duration-300">GitHub</button></a>
					</div>
				</div>
			</div>

			<!-- portfolio -->
			<div class=" text-slate-300 shadow-project-cards flex flex-col items-center mb-10 px-10 py-5 lg:flex-row mx-10">
				<div>
					<h3 class=" text-2xl mb-5 text-slate-200 ">My Portfolio</h3>
					<img class="mb-5" src={portfolio_image} alt="third project (current portfolio site) screenshot" width="600px" height="">
				</div>
				<div class="lg:ml-10">
					<p class="max-w-[500px] min-w-[300px] mb-5 lg:min-w-[400px] text-left text-lg">
						Building my portfolio allowed me to practice basic web development skills to create a personalised site to display my work.
					</p>
					<div class="flex justify-center mb-5 lg:mt-10">
						<!-- <img src={astro_logo} alt=""> -->
            <i class="devicon-html5-plain colored text-5xl mx-2"></i>
            <i class="devicon-tailwindcss-plain colored text-5xl mx-2"></i>  	   
            
            <i class="devicon-astro-plain colored text-5xl mx-2"></i>
          
          
          
       
					</div>
					<div class="lg:mt-10">
						<a href="#top-section" target="_blank"><button class="text-xl m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-cyan-800 text-cyan-600 hover:bg-cyan-800 hover:text-slate-300 duration-300">Live Demo</button></a>
						<a href="https://github.com/knaychuk/my-portfolio" target="_blank"><button class="text-xl m-2 outline outline-2 p-1 transition ease-in-out delay-50 outline-cyan-800 text-cyan-600 hover:bg-cyan-800 hover:text-slate-300 duration-300">GitHub</button></a>
					</div>
				</div>
			</div>
		</section>

		<!-- footer section -->
		<footer class="bg-neutral-900 p-5 flex flex-col items-center">
			<a onclick="document.getElementById('top-section').scrollIntoView({ behavior: 'smooth'})" ><i class="fa-solid fa-arrow-up fa-2xl mb-12 hover:cursor-pointer" style="color: #828282"></i></a>
			<div class="flex justify-center mb-5">
				<a target="_blank" href="https://github.com/knaychuk"><i class="fa-brands fa-github fa-2xl mx-5 hover:cursor-pointer" style="color: #CBD5E1;"></i></a>
				<a target="_blank" href={cv}><i class="fa-solid fa-file fa-2xl mx-5 hover:cursor-pointer" style="color: #CBD5E1"></i></a>
			</div>
		</footer>

	
		<script src="https://kit.fontawesome.com/eff8ed37bf.js" crossorigin="anonymous"></script>
	</body>
</html>
